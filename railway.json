{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "echo 'Build phase skipped (handled in install)'"
    },
    "deploy": {
        "startCommand": ". .venv/bin/activate && uvicorn backend.main:app --host 0.0.0.0 --port $PORT",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}